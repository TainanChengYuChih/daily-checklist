<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>每日任務追蹤</title>
  <style>
    body {
      font-family: "Noto Sans TC", sans-serif;
      padding: 2em;
      background: #f9f9f9;
    }
    h1 {
      color: #333;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      margin-bottom: 0.5em;
    }
    label {
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>📅 今日任務追蹤器</h1>
  <ul id="taskList">載入中...</ul>

  <!-- Firebase App (the core Firebase SDK) -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
    import { getFirestore, doc, getDoc } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-firestore.js";

    const firebaseConfig = {
      apiKey: "AIzaSyCCUR-M2QlDpgLdOkLr2K7Icw2-er5LNKo",
      authDomain: "daily-task-site.firebaseapp.com",
      projectId: "daily-task-site",
      storageBucket: "daily-task-site.appspot.com",
      messagingSenderId: "502749336740",
      appId: "1:502749336740:web:35cab86ad44dcadb528231"
    };
    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    const today = new Date();
    const yyyyMMdd = today.toISOString().slice(0,10).replace(/-/g, "");

    const taskList = document.getElementById("taskList");
    const storageKey = "tasks_" + yyyyMMdd;

    async function loadTasks() {
      const docRef = doc(db, "tasks", yyyyMMdd);
      const docSnap = await getDoc(docRef);

      if (docSnap.exists()) {
        const taskContent = docSnap.data().content;
        const tasks = taskContent.split("\n");
        const saved = JSON.parse(localStorage.getItem(storageKey) || "[]");

        taskList.innerHTML = "";

        tasks.forEach((task, index) => {
          const li = document.createElement("li");
          const checkbox = document.createElement("input");
          checkbox.type = "checkbox";
          checkbox.id = "task_" + index;
          checkbox.checked = saved.includes(index);
          checkbox.addEventListener("change", () => {
            const newSaved = [...document.querySelectorAll("input[type='checkbox']")]
              .map((cb, i) => cb.checked ? i : null)
              .filter(i => i !== null);
            localStorage.setItem(storageKey, JSON.stringify(newSaved));
          });

          const label = document.createElement("label");
          label.htmlFor = checkbox.id;
          label.textContent = task;

          li.appendChild(checkbox);
          li.appendChild(label);
          taskList.appendChild(li);
        });
      } else {
        taskList.innerHTML = "<li>⚠️ 今天還沒有任務資料喔！</li>";
      }
    }

    loadTasks();
  </script>
</body>
</html>
